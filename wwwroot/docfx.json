{
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "templates/custom"
    ],
    "globalMetadata": {
      "_appName": "TotK Mod Manager",
      "_appTitle": "TKMM",
      "_enableSearch": true,
      "_appLogoPath": "images/Icon-Transparent-1024.png",
      "_appFaviconPath": "images/icon.ico",
      "_appFooter": "<footer id=\"copyright\">Copyright Â© 2023-2024 TKMM-Team under the MIT License.</footer>",
      "pdf": true
    },
    "postProcessors": [
      "ExtractSearchIndex"
    ]
  }
}
